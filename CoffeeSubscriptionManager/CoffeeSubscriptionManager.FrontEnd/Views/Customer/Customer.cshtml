@model CustomerViewModel;

@{
    ViewData["Title"] = "Customer";
}

@using (@Html.BeginForm("", "Customer", FormMethod.Get))
{
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th scope="col">FirstName</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Address Line 1</th>
                <th scope="col">Address Line 2</th>
                <th scope="col">City</th>
                <th scope="col">PostCode</th>
                <th scope="col">Subscriptions</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers!)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.Surname</td>
                    <td>@customer.Email</td>
                    <td>@customer.FirstLineOfAddress</td>
                    <td>@customer.SecondLineOfAddress</td>
                    <td>@customer.City</td>
                    <td>@customer.Postcode</td>
                    <td>@customer.Subscriptions</td>
                    <td>@Html.ActionLink("Update", "EditCustomer", new { customerId = customer.Id })</td>
                    <td>@Html.ActionLink("Delete", "DeleteCustomer", new { customerId = customer.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}

@Html.ActionLink("Create", "CreateCustomerForm")
